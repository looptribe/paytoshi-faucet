{% extends 'default/admin_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>{{ name|default('Paytoshi Faucet') }} Setup</h1>
            <hr>

            <div class="panel panel-default {% if errors %}panel-danger{% else %}panel-success{% endif %}">
                <div class="panel-heading">
                    <h3 class="panel-title">Requirements check</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-unstyled">
                        <li>
                            {% if dbException %}
                                <span class="text-danger fa fa-fw fa-times"></span>
                                Database error: {{ dbException.message }}
                            {% else %}
                                <span class="text-success fa fa-fw fa-check"></span>
                                Database correctly configured.
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>

            <p>TODO</p>

            <form action="{{ path('setup_execute') }}" method="post">
                <button type="submit" class="btn btn-primary">Start now</button>
            </form>
        </div>
    </div>
{% endblock %}